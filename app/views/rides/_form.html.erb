<% if @ride.errors.any? %>
    <div style="color:red;">
        <h4>There were some errors:</h4>
        <ul>
            <% @ride.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @ride do |f| %>

    <%= f.label name="Name:" %>
    <%= f.text_field :name, value: @ride.name %>
    <br>
    <br>
    <%= f.label name="Date:" %>
    <%= f.text_field :date, value: @ride.date %>
    <br>
    <br>
    <%= f.label name="Location:" %>
    <%= f.text_field :location, value: @ride.location %>
    <br>
    <br>
    <%= f.label name="Category:" %>
    <%= f.select :category, ['CAT 1: 10-12 MPH', 'CAT 2: 12-15 MPH', 'CAT 3: 15-18 MPH', 'CAT 4: 18-22 MPH', 'CAT 5: 23+ MPH' ] %>
    <br>
    <br>
    <%= f.label name="Distance (Miles):" %>
    <%= f.text_field :distance, value: @ride.distance %>
    <br>
    <br>
    <%= f.label name="About:" %>
    <%= f.text_area :about, value: @ride.about %>
    <br>
    <br>
    <%= f.submit %>
    
<% end %> 